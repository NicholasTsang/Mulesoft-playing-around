    <http:request-config name="HTTP_Request_Configuration" host="localhost" port="5002" doc:name="HTTP Request Configuration"/>
    <http:request-config name="HTTP_Request_Configuration1" host="localhost" port="5003" doc:name="HTTP Request Configuration"/>
    <flow name="DataOptionsFlow">
        <http:listener config-ref="HTTP_Listener_Configuration" path="/" doc:name="dataOptions"/>
        <parse-template location="C:\Users\Admin\AnypointStudio\workspace\database\src\main\html-app\Features\DataOptions.html" doc:name="Parse Template"/>
    </flow>
    <flow name="DataChoiceFlow">
        <http:listener config-ref="HTTP_Listener_Configuration1" path="/" doc:name="dataChoice"/>
        <logger message="before dataprocess" level="INFO" doc:name="Logger"/>
        <custom-transformer class="database.dataProcess" doc:name="Java"/>
        <logger message="after dataProcess" level="INFO" doc:name="Logger"/>
        <logger message="#[sessionVars.dataChoice]" level="INFO" doc:name="Logger"/>
        <choice doc:name="Choice">
            <when expression="#[sessionVars.dataChoice=='View']">
                <http:request config-ref="HTTP_Request_Configuration" path="/" method="POST" doc:name="dataView"/>
            </when>
            <when expression="#[sessionVars.dataChoice=='Entry']">
                <http:request config-ref="HTTP_Request_Configuration1" path="/" method="POST" doc:name="dataEntry"/>
            </when>
            <otherwise>
                <logger message="There is a capitial  letter in each word" level="INFO" doc:name="Logger"/>
            </otherwise>
        </choice>
    </flow>
</mule>
